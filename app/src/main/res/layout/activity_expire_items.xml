<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpireItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sectionAHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/expiring_items"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/sectionATodayCheques"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/itemIdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="Id"/>

                <TextView
                    android:id="@+id/prodNamet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:text="Product Name"/>

                <TextView
                    android:id="@+id/expDatet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="Expire Date"/>

                <TextView
                    android:id="@+id/qtyt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="Quantity"/>


            </LinearLayout>

            <ListView
                android:id="@+id/listViewC"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <!-- Use a ListView, RecyclerView, or TextViews to display today's cheques -->
            <!-- Add UI components dynamically based on 'todayCheques' data -->
        </LinearLayout>


    </LinearLayout>


</LinearLayout>